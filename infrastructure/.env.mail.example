# ============================================
# MAILU MAIL SERVER CONFIGURATION
# ============================================
# Copy this file to .env.mail and configure with your settings

# ============================================
# DOMAIN SETTINGS
# ============================================
# Your primary mail domain (e.g., exoinafrica.com)
DOMAIN=exoinafrica.com

# Main hostname for the mail server (e.g., mail.exoinafrica.com)
HOSTNAMES=mail.exoinafrica.com

# Secret key for session encryption (generate a random string)
SECRET_KEY=change-this-to-a-random-64-character-string

# ============================================
# NETWORK SETTINGS
# ============================================
# The subnet for the Docker network
SUBNET=172.20.0.0/24

# The public IP address of your server
# This is used for DKIM and SPF records
REAL_IP_HEADER=
REAL_IP_FROM=

# ============================================
# ADMIN SETTINGS
# ============================================
# Initial admin account (created on first run)
ADMIN=admin
ADMIN_PASSWORD=change-this-admin-password

# Web admin URL prefix
WEB_ADMIN=/admin

# Webmail client (roundcube, rainloop, or none)
WEBMAIL=roundcube
WEB_WEBMAIL=/webmail

# ============================================
# SECURITY SETTINGS
# ============================================
# TLS flavor: mail (Mailu-generated), letsencrypt, cert, notls
TLS_FLAVOR=letsencrypt

# Authentication rate limiting
AUTH_RATELIMIT_IP=60/hour
AUTH_RATELIMIT_USER=100/day

# Message size limit (in bytes, default 50MB)
MESSAGE_SIZE_LIMIT=52428800

# ============================================
# RECIPIENT SETTINGS
# ============================================
# Default recipient delimiter
RECIPIENT_DELIMITER=+

# Reject unknown local recipients (true/false)
REJECT_UNLISTED_RECIPIENT=yes

# ============================================
# DKIM SETTINGS
# ============================================
# DKIM selector (used in DNS record name)
DKIM_SELECTOR=mail

# DKIM key length
DKIM_KEY_LENGTH=2048

# ============================================
# ANTI-SPAM SETTINGS
# ============================================
# Antispam action: reject, tag
ANTISPAM_ACTION=tag

# ============================================
# OPTIONAL: FETCHMAIL
# ============================================
# Enable fetching mail from external accounts
FETCHMAIL_ENABLED=false
FETCHMAIL_DELAY=600

# ============================================
# DATABASE SETTINGS
# ============================================
# PostgreSQL settings (used by docker-compose.mail.yml)
DB_NAME=mailu
DB_USER=mailu
DB_PASSWORD=change-this-database-password

# ============================================
# LOGGING
# ============================================
# Log level: WARNING, INFO, DEBUG
LOG_LEVEL=WARNING

# Log driver (json-file, syslog, journald)
LOG_DRIVER=json-file

# ============================================
# SITENAME AND BRANDING
# ============================================
SITENAME=Exoin Africa Mail
WEBSITE=https://exoinafrica.com
